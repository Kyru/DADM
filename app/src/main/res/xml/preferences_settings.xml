<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="Default value"
        android:key="edit_text_preference_username"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Edit text preference" />
    <PreferenceCategory android:title="Preference category">

        <ListPreference
            android:defaultValue="1"
            android:entries="@string/st_language"
            android:entryValues="@array/languages_show"
            android:key="list_preference_languages"
            android:title="List preference" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@string/st_httpmethod"
            android:entryValues="@array/methods_http_show"
            android:key="list_preference_methods_http"
            android:title="List preference" />
    </PreferenceCategory>
</PreferenceScreen>